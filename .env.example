# AWS API Key (Required)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=eu-west-2

# Model Configuration
# Use AWS Bedrock model IDs (based on your available models):
MODEL_NAME=anthropic.claude-3-7-sonnet-20250219-v1:0

# Generation Settings (Optional)
DEFAULT_TEMPERATURE=0.8  # For question generation (higher = more creative)
REVIEW_TEMPERATURE=0.3   # For quality review (lower = more consistent)
VALIDATION_TEMPERATURE=0.1  # For answer validation (very low = objective)

# Quality Settings (Optional)
QUALITY_THRESHOLD=0.7
MAX_REGENERATIONS=3

# Output Settings (Optional)
DEFAULT_OUTPUT=quiz

# Web Search Feature (Optional - for future use)
# TAVILY_API_KEY=your_tavily_key_here
# USE_WEB_SEARCH=false